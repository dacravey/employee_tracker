<h1>Update <%=@employee.employee_name() %> Employee record </h1>

<form action="/employees/<%= @employee.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="employee_name">Edit Employee name:</label>
  <input id="employee_name" name="employee_name" type="text">

  <button type="submit" class="btn btn-sm btn-primary">Update</button>
</form>

<form action="/employees/<%= @employee.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-sm btn-danger">Fire employee</button>
</form>

<p><a href="/">Return to Main Page</a></p>
